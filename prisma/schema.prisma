generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Movies {
  movie_id          String  @id @default(uuid())
  movie_name        String
  released_year     Int?
  createdAt         DateTime @default(now())
  single_or_series  String?
  country           String?
  thumbnail_name    String?
  storage_path      String?
  actors            actor[]

  @@index([movie_name, released_year, createdAt, single_or_series, country,storage_path])
}

model actor{
  actor_id              String  @id @default(uuid())
  fullname              String?
  profile_picture_path  String?
  movies                Movies[]

  @@index([fullname])
}
