generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Movies {
  movie_id         String  @id @default(uuid())
  movie_name       String
  released_year    Int?
  single_or_series S_or_S?
  country String?
  thumbnail_name   String?
  storage_path String?
}

enum S_or_S {
  SINGLE
  SERIES
  SINGLE_BUT_PARTS
}
